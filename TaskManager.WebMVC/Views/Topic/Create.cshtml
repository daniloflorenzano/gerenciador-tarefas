@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TaskManager.Core.Enums
@model TaskManager.Core.Models.Topic

@{
    ViewData["Title"] = "Create";
}

<h1>Criar tópico</h1>

<h4>Tópico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Color" class="control-label"></label> *@
            @*     <input asp-for="Color" class="form-control" /> *@
            @*     <span asp-validation-for="Color" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select id="Color" name="Color" class="form-control">
                    @foreach (TopicColorOptionsEnum colorOption in ViewBag.ColorOptions)
                    {
                        <option value="@colorOption.ToString()">@colorOption</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de tópicos</a>
</div>

